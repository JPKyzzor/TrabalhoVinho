<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/amarelo"
    android:padding="16dp">

    <!-- Logo -->
    <ImageView
        android:id="@+id/logoImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:src="@drawable/mdsvinhoemhd"
        android:contentDescription="@string/logo_do_aplicativo1" />

    <!-- Título Esqueceu sua senha -->
    <TextView
        android:id="@+id/forgotPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/esqueceu_sua_senha"
        android:textSize="20sp"
        android:textColor="@color/novoroxo"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp" />

    <!-- Texto explicativo -->
    <TextView
        android:id="@+id/forgotPasswordDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/entre_em_contato_com_a_pessoa_respons_vel_que_vai_ajudar_na_assist_ncia_da_troca_de_senha"
        android:textColor="@color/novoroxo"
        android:layout_marginTop="8dp"
        android:textAlignment="center" />

    <!-- Informações de contato -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:padding="16dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/contactIcon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/zipzarpson" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <TextView
                android:id="@+id/contactName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/jo_o_da_silva"
                android:textColor="@color/novoroxo"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/contactPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_55_9_9911_9911"
                android:textColor="@color/novoroxo"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Botão de voltar -->
    <Button
        android:id="@+id/backButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/voltar1"
        android:backgroundTint="@color/novoroxo"
        android:textColor="@color/branco"
        android:layout_marginTop="24dp" />

</LinearLayout>
